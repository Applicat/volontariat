<div class="container-fluid">
  <div class="hero-unit">
    <%= @page ? markdown(@page.text) : 'Page not found' %>
  </div>
  <div class="row-fluid">
    <div class="span6">
      <h3><%= I18n.t('home.index.last_projects') %></h3>
      <%= render partial: 'shared/collection/table', locals: { 
        type: 'projects', collection: @projects, columns: ['name', 'user_id', 'url'],
        options: {show_title: false } 
      } %>
    </div>
    <div class="span6">
      <h3><%= I18n.t('home.index.last_vacancies') %></h3>
      <%= render partial: 'shared/collection/table', locals: { 
        type: 'vacancies', collection: Vacancy.where(type: nil).open.limit(5).order('created_at DESC').all, columns: ['name', 'project_id'],
        options: {show_title: false, append_new_link: false } 
      } %>
    </div>
  </div>
</div>
