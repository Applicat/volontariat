<h3>
  <a name="top">&nbsp;</a>
  <%= @project.name %>
</h3>

<dl class="dl-horizontal">
  <%= show_field(
    t('activerecord.models.product'), link_to(@project.product.name, @project.product)
  ) if @project.product %>
  <%= show_field(
    t('areas.index.title'), raw(@project.areas.map{|a| link_to a.name, area_path(a)}.join(', '))
  ) %>
  <%= show_actions %>
</dl>

<%= markdown @project.text %>

<%= render 'shared/comments', comment: @project.comments.new %>